---
import "../assets/css/satoshi.css";
import "../assets/css/index.css";
import red from "../assets/images/red.svg";
import green from "../assets/images/green.svg";
import yellow from "../assets/images/yellow.svg";
import logo from "../assets/images/logo.svg";
import buildingEmoji from "../assets/images/building.png";
import twitterIcon from "../assets/images/twitter.svg";
import githubIcon from "../assets/images/github.svg";
import mediumIcon from "../assets/images/medium.svg";
---

<html>
  <head>
    <title>Permissive</title>
    <link rel="shortcut icon" href={logo} type="image/x-icon" />
  </head>
  <body class="bg-black overflow-hidden">
    <div class="w-screen h-screen overflow-hidden blur-[150px] absolute z-0">
      <img
        src={red}
        class="absolute top-[20%] left-[-30%] w-[81vw] md:w-[50vw]"
      />
      <img
        src={yellow}
        class="absolute top-[-10%] md:top-[-30%] right-[-50%] w-[100vw] md:w-[70vw]"
      />
      <img
        src={green}
        class="absolute bottom-[-10%] md:bottom-[-40%] right-[-5%] w-[81vw] md:w-[50vw]"
      />
    </div>
    <div class="absolute w-screen h-screen z-10 flex flex-col">
      <div
        class="w-full bg-black bg-opacity-50 flex items-center justify-center gap-2 px-6 py-4"
      >
        <img src={logo} width="36" alt="permissive logo" />
        <h1 class="font-bold text-4xl">Permissive</h1>
      </div>
      <div
        class="w-full h-full flex flex-col items-center justify-center gap-20 px-2"
      >
        <img src={logo} alt="permissive logo" width="142" />
        <div class="flex flex-col gap-5 items-center text-center">
          <h2 class="font-bold text-4xl">Account permissions for Ethereum</h2>
          <h3 class="text-3xl">
            Built on <a
              class="text-info-400"
              href="https://eips.ethereum.org/EIPS/eip-4337"
              target="_blank">ERC-4337</a
            >
          </h3>
        </div>
        <h3 class="text-3xl font-bold flex gap-2">
          <img
            src={buildingEmoji}
            alt="construction sign apple"
            height="32"
            width="32"
          />
          Currently building
        </h3>
        <div class="flex items-center gap-6">
          <a href="https://twitter.com/permissivelabs" target="_blank"
            ><img src={twitterIcon} alt="twitter logo" width="33" />
          </a>
          <a href="https://github.com/permissivelabs" target="_blank">
            <img src={githubIcon} alt="github logo" width="36" />
          </a>
          <a href="https://medium.com/@permissivelabs" target="_blank">
            <img src={mediumIcon} alt="medium logo" width="36" />
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
